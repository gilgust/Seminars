@model HomeIndexViewModel

    <div class="container">
        <div >
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">LogOut</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary">LogIn</a>
            }
        </div>
        <div class="bg-primary m-1 p-1 text-white d-flex justify-content-center align-items-center"><h4 class="m-1">User Details</h4></div>
        <table class="table table-sm table-bordered m-1 p-1">
            @foreach (var kvp in Model.Data)
            {
                <tr>
                    <th>@kvp.Key</th>
                    <th>@kvp.Value</th>
                </tr>
            }
        </table>

        <!--Section: Jumbotron-->
        <section class="card wow fadeIn" style="background-image: url(https://mdbootstrap.com/img/Photos/Others/gradient1.jpg);">

            <!-- Content -->
            <div class="card-body text-white text-center py-5 px-5 my-5">

                <h1 class="mb-4">
                    <strong>Learn Bootstrap 4 with MDB</strong>
                </h1>
                <p>
                    <strong>Best & free guide of responsive web design</strong>
                </p>
                <p class="mb-4">
                    <strong>
                        The most comprehensive tutorial for the Bootstrap 4. Loved by over 500 000 users. Video and written
                        versions available. Create your own, stunning website.
                    </strong>
                </p>
                <a target="_blank" href="https://mdbootstrap.com/education/bootstrap/" class="btn btn-outline-white btn-lg">
                    Start
                    free tutorial
                    <i class="fas fa-graduation-cap ml-2"></i>
                </a>

            </div>
            <!-- Content -->
        </section>
        <!--Section: Jumbotron-->

        <hr class="my-5">

        <!--Section: Cards-->
        <section class="text-center">

            <!--Grid row-->
            <div class="row mb-4 wow fadeIn d-flex flex-row justify-content-around flex-wrap">
                @foreach (var seminar in Model.Seminars)
                {
                    @Html.Partial("SeminarPreview", seminar)
                }
            </div>
