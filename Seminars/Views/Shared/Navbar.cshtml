<nav class="navbar fixed-top navbar-expand-lg navbar-light white scrolling-navbar">
    <div class="container">

        <!-- Brand -->
        <a class="navbar-brand waves-effect" asp-controller="Home" asp-action="Index">
            <strong class="blue-text">MDB</strong>
        </a>

        <!-- Collapse -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Links -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <!-- Left -->
            @Html.Partial("Menu")

            <!-- Right -->
            <div class="d-flex justify-content-end align-items-center">
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <span class="text-center"> @User.Identity.Name</span>
                }
                <div class="btn-group ">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <a asp-controller="Account" asp-action="Logout" class="btn btn-secondary btn-sm">log out</a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-sm">logIn</a>
                        <a asp-controller="Account" asp-action="Logup" class="btn btn-primary btn-sm">SignUp</a>
                    }
                </div>
            </div>

        </div>
    </div>
</nav>